<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_below="@+id/ddd"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/txtentrywin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/pera"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/pera"
            android:text="TextView" />

        <TextView
            android:id="@+id/txttwinamount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/dose"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/dose"
            android:text="TextView" />

        <TextView
            android:id="@+id/txtDigit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="13dp"
            android:ellipsize="end"
            android:maxWidth="300dp"
            android:maxLines="1"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDigit"
            android:layout_alignStart="@+id/txtDigit"
            android:layout_marginTop="-6dp"
            android:ellipsize="end"
            android:maxWidth="300dp"
            android:maxLines="1"
            android:text="No. Entries: "
            android:textColor="#333"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/dose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pera"
            android:layout_alignStart="@+id/txtDigit"
            android:ellipsize="end"
            android:maxWidth="300dp"
            android:maxLines="1"
            android:text="Total Win Amount : "
            android:textColor="#333"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/txtdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="29dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/txtTimeCap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtdate"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="29dp"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="2 P.M." />



    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
